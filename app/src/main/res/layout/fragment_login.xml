<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_medium_extra">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/general_app_name"
        android:textSize="48dp"/>

    <EditText
        android:id="@+id/vEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/view_auth_email_hint"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/vPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/view_auth_password_hint"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/vConfirmPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/view_auth_confirm_password_hint"
        android:inputType="textPassword"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/vLoginButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_big"
            android:padding="@dimen/spacing_medium_extra"
            android:text="@string/view_auth_login"/>

        <Button
            android:id="@+id/vSignUpButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_big"
            android:padding="@dimen/spacing_medium_extra"
            android:text="@string/view_auth_signup"/>

    </LinearLayout>

</LinearLayout>